<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eliteparking"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:label="Elite Parking"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
        />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBvMsVX_t9JnUdxEQ-HwzXAMjsZpN9TLjc"
        />

        <activity
            android:name="MainActivity"
            android:label="EliteParking">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="InicioActivity"
            android:label="Elite Parking">
            <intent-filter>
                <action android:name="Inicio" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="InfoActivity"
            android:label="Información">
            <intent-filter>
                <action android:name="Info" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ChatActivity"
            android:label="Chat" >
            <intent-filter>
                <action android:name="Chat" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="UbicacionActivity"
            android:label="Ubicación" >
            <intent-filter>
                <action android:name="Ubicacion" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="CalificacionActivity"
            android:label="Calificación" >
            <intent-filter>
                <action android:name="Calificacion" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>      
    </application>

</manifest>
